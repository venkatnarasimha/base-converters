{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["airbnb-base", "eslint:recommended", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-unused-vars": [
        "error",
        {
            "argsIgnorePattern": "^_"
        },
        {
          "endOfLine":"auto"
       }
    ],
    "no-unused-expressions": [
        2,
        {
            "allowShortCircuit": true
        }
    ],
    "no-console": ["error"],
    "no-var": ["error"],
    "prefer-destructuring": [1]
  }
}

